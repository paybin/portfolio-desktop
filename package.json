{
  "name": "portfolio-desktop",
  "productName": "Paybin",
  "version": "1.0.5",
  "description": "Paybin Portfolio App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish always",
    "pack": "electron-builder --dir"
  },
  "author": "Paybin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paybin/portfolio-desktop.git"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "io.paybin.portfolio",
    "publish": {
      "provider": "github",
      "owner": "paybin",
      "releaseType": "release",
      "repo": "portfolio-desktop"
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}